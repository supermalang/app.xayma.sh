<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="pos_config_view_form">
            <field name="name">pos.config.form.view</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
            <field name="arch" type="xml">
                <sheet position='inside'>
                    <h2>Order Sync Config</h2>
                    <div class="row mt16 o_settings_container" id="inventory_location">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="wv_session_id" string="Session"/>
                                <div class="text-muted">
                                </div>
                                <div class="content-group mt16">
                                    <field name="wv_session_id"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="session_short_name"/>
                                <div class="text-muted">
                                </div>
                                <div>
                                    <field name="session_short_name"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="allow_incoming_orders"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="allow_incoming_orders"/>
                                <div class="text-muted">
                                </div>
                                <div>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="allow_auto_sync"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="allow_auto_sync"/>
                                <div class="text-muted">
                                </div>
                                <div>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </field>
        </record>
    </data>
</odoo>
